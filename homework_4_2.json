{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
      "title": "Happiness Score vs Extent of contribution of GDP_Capita 2015 - 2019",
      "width": 500,
    "height": 500,
    "data": {"url": "https://raw.githubusercontent.com/spra0027/DataViz3179Ass2/main/data/all_years.csv"
    },
        "transform": [
          {
            "lookup": "properties",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/spra0027/DataViz3179Ass2/main/data/all_years.csv",
                "format": {
                  "type": "csv"
                }
              },
              "key": "Country",
              "fields": []
            }
          },
          {"filter": "datum.Year == year_selection"}
        ],
    "params": [
      {
        "name": "year_selection",
        "value": 2016,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2019,
          "step": 1,
          "name": "Year Selection: "
        }
      }
    ],
  
    "mark": "circle",
    "encoding": {
      "color": {"field": "Extent of GDP_Capita", "type": "quantitative",
        "scale": {
            "range": ["red", "green"]
        }
      },
      "x": {"field": "Score", "type": "quantitative"},
      "y": {"field": "Extent of GDP_Capita", "type": "quantitative"},
      
      "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Score", "type": "quantitative"},
          {"field": "Extent of GDP_Capita", "type": "quantitative"}
      ]
    },
    "config": {}
    
  }
  
  
